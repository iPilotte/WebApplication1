@model WebApplication1.Models.Employee
@{
    ViewBag.Title = "SmartBuffet; เพิ่มพนักงาน";
}
<html lang="en">
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Admin")">Buffet</a>
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> @Html.ViewBag.EmFN @Html.ViewBag.EmLN ( @Html.ViewBag.EmPos ) <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="@Url.Action("Logout", "Admin")"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li>
                        <a href="@Url.Action("Index", "Admin")"><i class="glyphicon glyphicon-cutlery"></i> จัดการโต๊ะอาหาร</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Stock", "Admin")"><i class="glyphicon glyphicon-shopping-cart"></i> จัดการสินค้า</a>
                    </li>
                    <li >
                        <a href="@Url.Action("Order", "Admin")"><i class="glyphicon glyphicon-list-alt"></i> รายการที่สั่ง</a>
                    </li>
                    <li>
                        <a href="@Url.Action("ManageEmployee", "Admin")"><i class="glyphicon glyphicon-list-alt"></i> จัดการพนักงาน</a>
                    </li>
					<li>
						<a href="@Url.Action("EditPrice", "Admin")"><i class="glyphicon glyphicon-list-alt"></i> จัดการราคาบุฟเฟ่ต์</a>
					</li>
                </ul>
            </div>
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1><i class="glyphicon glyphicon-user"></i> เพิ่มพนักงาน</h1>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-lg-12">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.ValidationSummary(true)
                        <!--<form class="form-horizontal">-->
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="">รหัสพนักงาน</label>
                                    <div class="col-md-4">
                                       <!-- 
                                       <input id="" name="" type="text" placeholder="รหัสพนักงาน" class="form-control input-md" required=""> 
                                       -->
                                        @Html.EditorFor(model => model.EmID, new { htmlAttributes = new { @class = "form-control input-md", @placeholder = "รหัสพนักงาน", @type = "text" } })
                                        @Html.ValidationMessageFor(model => model.EmID)
                                    </div>
                                </div>

                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="">username</label>
                                    <div class="col-md-4">
                                        <!-- 
                                        <input id="" name="" type="text" placeholder="username" class="form-control input-md" required="">
                                        -->
                                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control input-md", @placeholder = "username", @type = "text", @required = "required" } })
                                        @Html.ValidationMessageFor(model => model.Username)
                                    </div>
                                </div>

                                <!-- Password input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="">password</label>
                                    <div class="col-md-4">
                                        <!--
                                        <input id="" name="" type="password" placeholder="password" class="form-control input-md" required="">
                                        -->
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control input-md", @placeholder = "password", @type = "password", @required = "required" } })
                                        @Html.ValidationMessageFor(model => model.Password)
                                    </div>
                                </div>

                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="">ชื่อจริง</label>
                                    <div class="col-md-4">
                                        <!--
                                        <input id="" name="" type="text" placeholder="ชื่อจริง" class="form-control input-md" required="">
                                        -->
                                        @Html.EditorFor(model => model.EmFirstName, new { htmlAttributes = new { @class = "form-control input-md", @placeholder = "ชื่อจริง", @type = "text", @required = "required" } })
                                        @Html.ValidationMessageFor(model => model.EmFirstName)
                                    </div>
                                </div>

                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="">ชื่อสกุล</label>
                                    <div class="col-md-4">
                                        <!--
                                        <input id="" name="" type="text" placeholder="ชื่อสกุล" class="form-control input-md" required="">
                                        -->
                                        @Html.EditorFor(model => model.EmLastName, new { htmlAttributes = new { @class = "form-control input-md", @placeholder = "ชื่อสกุล", @type = "text", @required = "required" } })
                                        @Html.ValidationMessageFor(model => model.EmLastName)
                                    </div>
                                </div>

                                <!-- Select Basic -->
                                <div class="form-group">  
                                    <label class="col-md-4 control-label" for="">ตำแหน่ง</label>
                                    <div class="col-md-4">
                                        <!--
                                        <select id="selectbasic" name="selectbasic" class="form-control" required>
                                            <option value="" selected disabled>เลือกตำแหน่ง..</option>
                                            <option value="waiter">พนักงานเสริ์ฟอาหาร</option>
                                            <option value="kitchen">คนครัว</option>
                                            <option value="cashier">แคชเชียร์</option>
                                            <option value="admin">กูเอง</option>
                                        </select>
                                        -->
                                        @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control input-md", @placeholder = "ตำแหน่ง", @type = "text", @required = "required" } })
                                        @Html.ValidationMessageFor(model => model.Position)
                                    </div>
                                </div>

                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="">เบอร์โทรศัพท์</label>
                                    <div class="col-md-4">
                                        <!--
                                        <input id="" name="" type="text" placeholder="เบอร์โทรศัพท์" class="form-control input-md" required="">
                                        -->
                                        @Html.EditorFor(model => model.Tel, new { htmlAttributes = new { @class = "form-control input-md", @placeholder = "เบอร์โทรศัพท์", @type = "text", @required = "required" } })
                                        @Html.ValidationMessageFor(model => model.Tel)
                                    </div>
                                </div>
                                <br />
                                <div align="center">
                                    <button type="submit" class="btn btn-default  btn-lg">บันทึก</button>
                                    <button type="reset" class="btn btn-danger  btn-lg">ล้างข้อมูล</button>
                                </div>
                       <!-- </form>-->
                    }
                    </div>
                </div>
            </div>
        </div>
    </div>
    @{
        if (HttpContext.Current.Request.QueryString["result"] == "true")
        {
            <script type="text/javascript">
        alert("สำเร็จ");
        document.location = "/Home/";
            </script>
        }
    }
    
    <script src="js/jquery.js"></script>
    <script src="js/bootstrap.min.js"></script>
</body>
</html>


