@{
    ViewBag.Title = "SmartBuffet; จัดการการสั่งซื้อ";
}
<div id="wrapper">
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="index.html">Buffet</a>
        </div>
        <!-- Top Menu Items -->
        <ul class="nav navbar-right top-nav">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> @Html.ViewBag.EmFN @Html.ViewBag.EmLN ( @Html.ViewBag.EmPos ) <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li>
                        <a href="@Url.Action("Logout", "Admin")"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                    </li>
                </ul>
            </li>
        </ul>
        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav side-nav">
                <li>
                    <a href="@Url.Action("Index", "Admin")"><i class="glyphicon glyphicon-cutlery"></i> จัดการโต๊ะอาหาร</a>
                </li>
                <li>
                    <a href="@Url.Action("Stock", "Admin")"><i class="glyphicon glyphicon-shopping-cart"></i> จัดการสินค้า</a>
                </li>
                <li>
                    <a href="@Url.Action("Order", "Admin")"><i class="glyphicon glyphicon-list-alt"></i> รายการที่สั่ง</a>
                </li>
                <li>
                    <a href="@Url.Action("ManageEmployee", "Admin")"><i class="glyphicon glyphicon-list-alt"></i> จัดการพนักงาน</a>
                </li>
            </ul>
        </div>
    </nav>
    <div id="page-wrapper">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        <i class="glyphicon glyphicon-list-alt"></i>
                        รายการที่สั่ง
                    </h1>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="well well-lg">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th width="10">#</th>
                                    <th width="10">หมายเลขโต๊ะ</th>
                                    <th align="center">รายการ</th>
                                    <th width="10">จำนวน</th>
                                    <th width="50"></th>
                                    <th width="50"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.ODList != null)
                                {
                                    int i = 0;
                                    foreach (var item in ViewBag.BList) 
                                    {
                                        foreach (var item2 in ViewBag.BList[i].DetailID) 
                                        {
                                            <tr>
                                            <td>@item2.DetailID</td>
                                            <td>@Html.ViewBag.Tab_n[i]</td>
                                                @foreach(var item3 in ViewBag.ODList)
                                                {
                                                    if(item2.id == item3.id)
                                                    {
                                                        foreach (var item4 in ViewBag.PList) 
                                                        {
                                                            if (item3.PID == item4.id) 
                                                            {
                                                                <td> @item4.PName </td>
                                                                <td> @item3.Amount.ToString() </td>
                                                            }
                                                        }
                                                    }
                                                }
                                            <td>
                                                <button class="btn btn-info"><i class="glyphicon glyphicon-log-in"></i> เสริ๋ฟ</button>
                                            </td>
                                            <td>
                                                <button class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i> ยกเลิก</button>
                                            </td>
                                            </tr>
                                        }
                                    i++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
</div>
