@model WebApplication1.Models.BuffetPrice
@{
    ViewBag.Title = "SmartBuffet; เพิ่มพนักงาน";
}
<html lang="en">
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Admin")">Buffet</a>
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> @Html.ViewBag.EmFN @Html.ViewBag.EmLN ( @Html.ViewBag.EmPos ) <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="@Url.Action("Logout", "Admin")"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li>
                        <a href="@Url.Action("Index", "Admin")"><i class="glyphicon glyphicon-cutlery"></i> จัดการโต๊ะอาหาร</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Stock", "Admin")"><i class="glyphicon glyphicon-shopping-cart"></i> จัดการสินค้า</a>
                    </li>
                    <li >
                        <a href="@Url.Action("Order", "Admin")"><i class="glyphicon glyphicon-list-alt"></i> รายการที่สั่ง</a>
                    </li>
                    <li>
                        <a href="@Url.Action("ManageEmployee", "Admin")"><i class="glyphicon glyphicon-list-alt"></i> จัดการพนักงาน</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1><i class="glyphicon glyphicon-user"></i> จัดการราคาบุฟเฟ่</h1>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-lg-12">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.ValidationSummary(true)
                        <!--<form class="form-horizontal">-->
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="">ประเภท</label>
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.BuffetID, new { htmlAttributes = new { @class = "form-control input-md", @placeholder = "1 : เด็ก , 2 : ผู้ใหญ่", @type = "text", @required = "required" } })
                                        @Html.ValidationMessageFor(model => model.BuffetID)
                                    </div>
                                </div>

                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="">ราคา</label>
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.BPrice, new { htmlAttributes = new { @class = "form-control input-md", @placeholder = "ราคา", @type = "text", @required = "required" } })
                                        @Html.ValidationMessageFor(model => model.BPrice)
                                    </div>
                                </div>
                                <br />
                                <div align="center">
                                    <button type="submit" class="btn btn-default  btn-lg">บันทึก</button>
                                    <button type="reset" class="btn btn-danger  btn-lg">ล้างข้อมูล</button>
                                </div>
                       <!-- </form>-->
                    }
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="js/jquery.js"></script>
    <script src="js/bootstrap.min.js"></script>
</body>
</html>


